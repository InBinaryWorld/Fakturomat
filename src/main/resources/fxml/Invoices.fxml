<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_RIGHT" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pl.fakturomat.controllers.InvoicesController">
   <children>
      <TableView fx:id="tableView" tableMenuButtonVisible="true">
        <columns>
          <TableColumn fx:id="idColumn" minWidth="-1.0" prefWidth="-1.0" text="Numer Faktury" />
          <TableColumn fx:id="sellerColumn" minWidth="-1.0" prefWidth="-1.0" text="Sprzedawca" />
            <TableColumn fx:id="clientColumn" minWidth="-1.0" prefWidth="-1.0" text="Klient" />
            <TableColumn fx:id="dateColumn" prefWidth="-1.0" text="Data" />
        </columns>
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </VBox.margin>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
      <Button fx:id="showButton" alignment="CENTER_RIGHT" mnemonicParsing="false" onAction="#showAction" text="Pokaż fakturę">
         <VBox.margin>
            <Insets bottom="10.0" right="40.0" />
         </VBox.margin>
      </Button>
   </children>
</VBox>
