<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pl.fakturomat.controllers.NewInvoiceController">
   <children>
      <HBox alignment="CENTER" spacing="10.0">
         <children>
            <Label text="Sprzedawca" />
            <ComboBox fx:id="sellerComBox" prefWidth="150.0" />
            <Label text="Klient" />
            <ComboBox fx:id="clientComBox" prefWidth="150.0" />
         </children>
         <VBox.margin>
            <Insets bottom="20.0" left="10.0" right="10.0" top="10.0" />
         </VBox.margin>
      </HBox>
      <BorderPane>
         <right>
            <Button mnemonicParsing="false" onAction="#addProductAction" text="Dodaj produkt" BorderPane.alignment="CENTER" />
         </right>
         <left>
            <Label alignment="CENTER" contentDisplay="TOP" text="Lista produktów:" BorderPane.alignment="CENTER">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
         </left>
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </VBox.margin>
      </BorderPane>
      <TableView fx:id="tableView">
        <columns>
          <TableColumn fx:id="nameClm" prefWidth="75.0" text="Produkt" />
          <TableColumn fx:id="quantityClm" prefWidth="75.0" text="Ilość" />
            <TableColumn fx:id="measureClm" prefWidth="75.0" text="Jednostka miary" />
            <TableColumn fx:id="priceClm" prefWidth="75.0" text="Cena netto" />
            <TableColumn fx:id="taxClm" prefWidth="75.0" text="Stawka VAT (%)" />
            <TableColumn fx:id="amountClm" prefWidth="75.0" text="Wartość brutto" />
        </columns>
         <VBox.margin>
            <Insets left="10.0" right="10.0" />
         </VBox.margin>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
      <HBox alignment="CENTER_RIGHT" spacing="10.0">
         <children>
            <Label text="Razem do zapłaty:" />
            <Label fx:id="totalAmountLabel" text="12341,12" />
            <Label text="zł" />
         </children>
         <VBox.margin>
            <Insets left="10.0" right="10.0" top="10.0" />
         </VBox.margin>
      </HBox>
      <HBox alignment="TOP_RIGHT" spacing="10.0">
         <children>
            <Button fx:id="acceptInvoiceBtn" mnemonicParsing="false" onAction="#acceptInvoiceAction" text="Potwierdź fakturę" />
         </children>
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </VBox.margin>
      </HBox>
   </children>
</VBox>
