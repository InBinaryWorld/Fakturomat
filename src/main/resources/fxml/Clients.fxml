<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_RIGHT" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pl.fakturomat.controllers.ClientsController">
   <children>
      <TableView fx:id="tableView" tableMenuButtonVisible="true">
        <columns>
          <TableColumn fx:id="nameClm" minWidth="-1.0" prefWidth="-1.0" text="Nazwa" />
          <TableColumn fx:id="nipClm" minWidth="-1.0" prefWidth="-1.0" text="NIP" />
            <TableColumn fx:id="postCodeClm" minWidth="-1.0" prefWidth="-1.0" text="Kod pocztowy" />
            <TableColumn fx:id="cityClm" prefWidth="-1.0" text="Miejscowość" />
            <TableColumn fx:id="addressClm" prefWidth="-1.0" text="Ul. i numer" />
            <TableColumn fx:id="phoneClm" prefWidth="-1.0" text="Nr telefonu" />
        </columns>
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </VBox.margin>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
      <Button alignment="CENTER_RIGHT" mnemonicParsing="false" onAction="#addAction" text="Dodaj klienta">
         <VBox.margin>
            <Insets bottom="10.0" right="40.0" />
         </VBox.margin>
      </Button>
   </children>
</VBox>
